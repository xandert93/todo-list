<%- include("header") -%>

  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">

    <% listItems.forEach(item => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= item._id%>" onChange="this.form.submit()" />
        <input type="hidden" name="listType" value=<%= listTitle %>>
        <p><%= item.name %></p>
      </div>
    </form>
    <% }) %>


    <form class="item" action="/" method="POST">
      <input type="text" name="newListItem" placeholder="New Item" autocomplete="off" />
      <button type="submit" name="listType" value=<%= listTitle %>>+</button>
    </form>

  </div>

  <%- include("footer") -%>